<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingLeft="4dp"
    android:paddingEnd="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:theme="@style/CardView"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="2dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageViewSetIcon"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:adjustViewBounds="false" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/imageButtonDeleteSet"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_keyboard_arrow_right_24dp"
                android:cropToPadding="false"
                android:padding="4dp"
                android:background="@color/color_card_bg"
                android:alpha="0.5"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:textSize="18sp"
                android:textColor="@color/colorAppCaption"
                android:layout_toRightOf="@+id/imageViewSetIcon"
                android:layout_toLeftOf="@+id/imageButtonDeleteSet"
                android:layout_toEndOf="@+id/imageViewSetIcon"
                android:layout_toStartOf="@+id/imageButtonDeleteSet" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:textSize="14sp"
                android:textColor="@color/colorDescription"
                android:layout_below="@+id/textViewTitle"
                android:layout_toRightOf="@+id/imageViewSetIcon"
                android:layout_toEndOf="@+id/imageViewSetIcon"
                android:layout_alignRight="@+id/textViewTitle"
                android:layout_alignEnd="@+id/textViewTitle"/>




        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>